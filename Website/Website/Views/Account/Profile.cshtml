@model UserModel
@if (Model != null)
{
    <div class="container">
        <h1>Профиль</h1>
        <div class="row">
            <div class="col-md-4">
                <img src="@Url.Content($"~/Images/Users/default.png")" style="width:100px;" class="img-thumbnail" />
            </div>
            <div class="col-md-8">
                <div>
                    <strong>Имя:</strong> @Model.Name
                </div>
                <div>
                    <strong>Фамилия:</strong> @Model.Surname
                </div>
                <div>
                    <strong>Логин:</strong> @Model.Login
                </div>
                <div>
                    <strong>Электронная почта:</strong> @Model.Email
                </div>
                
            </div>
        </div>
    </div>
}
else
{
    <p>Профиль не найден.</p>
}