@model AddProduct
@{
    List<SelectListItem> items = new List<SelectListItem>
    {
        new SelectListItem { Text = "Сладости" },
        new SelectListItem { Text = "Лапша" },
        new SelectListItem { Text = "Соусы и пасты" },
        new SelectListItem { Text = "Напитки" },
        new SelectListItem { Text = "Растительное молоко" },
        new SelectListItem { Text = "Консервация" },
        new SelectListItem { Text = "Замороженные продукты" },
        new SelectListItem { Text = "Водоросли" },
        new SelectListItem { Text = "Бакалея" },
        new SelectListItem { Text = "Чай" },
        new SelectListItem { Text = "Кофе" },
        new SelectListItem { Text = "Снэки" },
        new SelectListItem { Text = "Всё для суши" },
        new SelectListItem { Text = "Специи" },
        new SelectListItem { Text = "Супы" },
        new SelectListItem { Text = "Веганские продукты" }
    };
}
@using (Html.BeginForm("AddCompanyProduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Type)
        @Html.TextBoxFor(model => model.Type, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Photo")
        <input type="file" name="file" id="photoFile" />
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить продукт" class="btn btn-primary" />
    </div>
}